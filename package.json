{
  "name": "powerschool-rag-api",
  "version": "1.0.0",
  "description": "Production-ready RAG API for PowerSchool PSSIS-Admin documentation with Slack integration",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:watch": "jest --config jest.e2e.config.js --watch",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "type-check": "tsc --noEmit",
    "seed": "tsx scripts/seed.ts",
    "seed:pssis-admin": "tsx scripts/seed.ts seed pssis-admin",
    "seed:schoology": "tsx scripts/seed.ts seed schoology",
    "seed:clear": "tsx scripts/seed.ts clear",
    "seed:stats": "tsx scripts/seed.ts stats",
    "db:migrate": "tsx scripts/migrate.ts",
    "clean": "rimraf dist coverage",
    "prepare": "husky install"
  },
  "keywords": [
    "rag",
    "powerschool",
    "typescript",
    "fastify",
    "openai",
    "pgvector",
    "slack",
    "n8n"
  ],
  "author": "Implementation Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.895.0",
    "@aws-sdk/credential-providers": "^3.895.0",
    "@fastify/compress": "^6.4.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.1.0",
    "@slack/bolt": "^3.22.0",
    "@slack/web-api": "^7.10.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "jsdom": "^22.1.0",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "pgvector": "^0.1.8",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "tiktoken": "^1.0.10",
    "turndown": "^7.1.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.4",
    "@types/jest": "^29.5.6",
    "@types/jsdom": "^21.1.4",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.7",
    "@types/supertest": "6.0.3",
    "@types/turndown": "^5.0.3",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "7.1.4",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
